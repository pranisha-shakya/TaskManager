<table id="taskCollection">
    <thead>
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>IsCompleted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
                <td>
                    <a hx-get="/Task/Edit/@task.Id" hx-target="#taskForm">Edit</a>
                    <a hx-post="/Task/Delete/@task.Id" hx-confirm="Are you sure you want to delete this task?" hx-target="#taskCollection">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>